extend layout
    
block content
  .row
    if player.avatarmedium
      .col-xs-3.col-sm-2.col-md-1
        img(src='#{player.avatarmedium}').img-thumbnail
    .col-md-4
      h1(style='font-weight: 700;')=player.personaname || player.account_id
    .col-md-2
      if player.cheese
        i.flaticon-1.medium-cheese(style="display:inline-block")
        p(style="display:inline;") x#{player.cheese}
    .col-md-5
      if (user && user.account_id === player.account_id)
        .alert.alert-info
          | Just joined?  We probably don't have your old matches yet.
          br
          | Play a game and come back, or request a match by ID.
        .checkbox
          label
            input.pref#dark(type="checkbox", checked=user.dark_theme)
            | Use Dark Theme
        .checkbox
          label
            input.pref#publicmmr(type="checkbox", checked=user.publicmmr)
            | Make MMR public
        if (user.account_id in ratingPlayers)
          button.btn.btn-default(disabled) MMR Tracked
        else
            a.btn.btn-success(href="http://steamcommunity.com/profiles/"+ (bots[0] ? bots[0].steamID : "")) Add MMR Tracker &raquo;
        include socket

  .row(style="margin-top:1em;")
    .col-md-12
      ul.nav.nav-tabs
        each val, key in tabs
          li(class= (route === key ? 'active' : ''))
              a(href="/players/#{player.account_id}/" + (key == 'index' ? "" : key))= val.name
  block playercontent
  hr
  .row
    .col-md-12
      include ads/leaderboard_3
append footer_assets
  include assets/datatables
  script.
    var account_id = #{player.account_id};
    playerTables();