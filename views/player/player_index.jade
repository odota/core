extend player

include /mixins/hero_table
include /mixins/teammate_table

block playercontent
  //pre=JSON.stringify(player.aggData)

  .row
    .col-md-12
      h3 Recent
      table.table#matches
      
      hr
      +ad("banner3")
      hr
      
      +hero_table(player.heroes_list)
      +teammate_table(player.teammate_list)
      
append footer_assets
  script.
    var matches = !{JSON.stringify(player.data.slice(0,10))};
    playerMatches(matches, {paging: false});
    $('#heroes').dataTable({
        "paging": true,
        "order": [
            [2, "desc"]
        ],
        "columnDefs": [{
            targets: "fromNow",
            render: function(data, type) {
                if (type === "display") {
                    if (!Number(data)){
                        return "never";
                    }
                    return moment.unix(data).fromNow();
                }
                return data;
            }
        }]
    });
    $('#teammates').dataTable({
        "paging": true,
        "order": [
            [2, "desc"]
        ],
        "columnDefs": [{
            targets: "fromNow",
            render: function(data, type) {
                if (type === "display") {
                    if (!Number(data)){
                        return "never";
                    }
                    return moment.unix(data).fromNow();
                }
                return data;
            }
        }]
    });
